<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/bacMassage"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/icon_left"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:text="Service Details"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:id="@+id/detail_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="16sp"
                            android:text="AU $58.00"
                            android:textColor="#FD7488"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="14sp"
                            android:text="Professional Nail polish"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:background="@drawable/shape_round"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="16sp"
                            android:text="Home service manicure"
                            android:textColor="#666"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="50dp"
                        android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/like"
                        android:src="@mipmap/icon_save"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:text="Like"
                            android:textColor="#FD7488"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

            <TextView
                android:background="#666"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/icon_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="18sp"
                        android:text="Sydney Nails Saion"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RatingBar
                        android:id="@+id/rating"
                        android:rating="3"
                        android:progressTint="#FFAC00"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:numStars="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:maxWidth="30dp"
                        android:maxHeight="30dp"
                        android:soundEffectsEnabled="true"
                        />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:background="#666"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:text="Facial &#038; body treatments at your home"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:text="Beautiful nail glitter, nail foils and much more in a huge colour selection."
                android:textColor="#A5A5A5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/icon_home"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:text="Home"
                android:textColor="#8F95AC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/save2"
                android:src="@mipmap/icon_star"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:text="Save to list"
                android:textColor="#8F95AC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/icon_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:text="Cart"
                android:textColor="#8F95AC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/buynow"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#FD7488"
            android:text="Buy Now"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_biankuangred"
            android:layout_width="100dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>