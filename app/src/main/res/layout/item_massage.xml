<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/shape_biankuang"
    android:layout_height="180dp">
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/banner_2"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <TextView
                    android:id="@+id/title"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:textSize="16dp"
                    android:textColor="#FC5D73"
                    android:layout_marginLeft="10dp"
                    android:text="Order details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/detail"
                android:textStyle="bold"
                android:textSize="14dp"
                android:maxLines="2"
                android:textColor="#8D94AB"
                android:layout_marginLeft="10dp"
                android:text="22/09/2020"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RatingBar
                android:id="@+id/rating"
                android:rating="3"
                android:progressTint="#FFAC00"
                style="?android:attr/ratingBarStyleIndicator"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:maxWidth="30dp"
                android:maxHeight="30dp"
                android:soundEffectsEnabled="true"
                />
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:id="@+id/saveimg"
                    android:src="@mipmap/icon_save"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:id="@+id/savetext"
                    android:text="519"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/icon_massage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:id="@+id/massage"
                    android:text="519"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/icon_share"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:id="@+id/share"
                    android:text="50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
