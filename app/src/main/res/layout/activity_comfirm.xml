<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/bacMassage"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/icon_left"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:text="Comfirm order"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">d

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Select your address"
                android:textColor="#FD7488"
                android:textSize="20sp" />
            <RelativeLayout
                android:id="@+id/tomap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/adress"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shape_round"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:text="Camperdown,Sydney"
                    android:textColor="#666"
                    android:paddingLeft="45dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:background="@mipmap/icon_location"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </RelativeLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="50dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/like"
                            android:src="@mipmap/icon_m"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/ordernumber"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="16sp"
                            android:text="Order number: 1"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/email"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="14sp"
                            android:text="Customer email:"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:background="#666"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"
                android:text="Nail polish"
                android:textColor="#FD7488"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/banner_2"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:textColor="#000"
                            android:layout_marginLeft="10dp"
                            android:text="Order details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:textColor="#FC5D73"
                            android:layout_marginRight="10dp"
                            android:text="$ 58.00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:textColor="#8D94AB"
                            android:layout_marginLeft="10dp"
                            android:text="Selected service time:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:textColor="#8D94AB"
                            android:layout_marginRight="10dp"
                            android:text="    x1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:textColor="#8D94AB"
                        android:layout_marginLeft="10dp"
                        android:text="22/09/2020"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:textColor="#8D94AB"
                        android:layout_marginLeft="10dp"
                        android:text="14:00 -16:00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="#FC5D73"
                        android:layout_marginLeft="10dp"
                        android:text="Total: AU $58.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:background="#666"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"
                android:text="Booking Service Time "
                android:textColor="#FD7488"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

           <RadioGroup

               android:layout_marginTop="10dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="40dp">
               <RadioButton
                   android:button="@null"
                   android:background="@drawable/shape_bac"
                   android:text="Tue 22/09"
                   android:gravity="center"
                   android:textColor="@color/select_color"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"/>
               <RadioButton
                   android:textColor="@color/select_color"
                   android:button="@null"
                   android:background="@drawable/shape_bac"
                   android:text="Web 23/09"
                   android:gravity="center"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"/>

               <RadioButton
                   android:textColor="@color/select_color"
                   android:button="@null"
                   android:background="@drawable/shape_bac"
                   android:text="Thurs 24/09"
                   android:gravity="center"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"/>
               <RadioButton
                   android:textColor="@color/select_color"
                   android:button="@null"
                   android:background="@drawable/shape_bac"
                   android:text="Fri 25/09"
                   android:gravity="center"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"/>
           </RadioGroup>
            <RadioGroup
                android:id="@+id/rg1"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RadioButton
                    android:id="@+id/rd1"
                    android:button="@null"
                    android:textColor="@color/select_color"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/shape_round"
                    android:text="10:00 - 12:00"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <RadioButton
                    android:id="@+id/rd2"
                    android:button="@null"
                    android:textColor="@color/select_color"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shape_round"
                    android:text="14:00 - 16:00"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </RadioGroup>
            <RadioGroup
                android:id="@+id/rg2"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RadioButton
                    android:id="@+id/rd3"
                    android:button="@null"
                    android:textColor="@color/select_color"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/shape_round"
                    android:text="16:00 - 18:00"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <RadioButton
                    android:id="@+id/rd4"
                    android:button="@null"
                    android:textColor="@color/select_color"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shape_round"
                    android:text="18:00 - 20:00"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </RadioGroup>

            <TextView
                android:layout_marginTop="10dp"
                android:background="#666"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:text="Total AU $58.00"
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/checkout"
                android:layout_marginTop="20dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#FD7488"
                android:text="Check out"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape_biankuangred"
                android:layout_width="100dp"
                android:layout_height="40dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>